<ol class="post-list">
  {{#each posts as |post|}}
    <li>
      <article class="post">
        <div class="title">
          <a href="/post/{{id}}">{{post.title}}</a>
        </div>
        <div class="meta">
          {{post.post_content}}
        </div>
        <div class="meta">
          {{post.category}}
        </div>
      </article>
    </li>
  {{/each}}
</ol>