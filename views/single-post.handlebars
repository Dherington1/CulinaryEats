<div class="container is-mobile">

        <div class="col-lg-12">
            
            <div class="box has-background-grey-lighter">
               <article class="post">

                <div class="title">
                  <h1 align="center" class="recipe-card__heading">{{post.title}}</h1><br>
                </div>

                <h3><b>Description:</b></h3>
                <div class="meta">
                  {{post.description}}
                </div>
                </br>

                <h3><b>Ingredients:</b></h3>
                <div class="meta">
                  {{post.ingredients}}
                </div>
                </br>

                <h3><b>Instructions: </b></h3>
                <div class="meta">
                  {{post.instructions}}
                </div>
              </article>
          </div>
      </div>
  <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</div>



{{! if logged in show this form to add a comment  }}
{{#if loggedIn}}
  <form align="center" class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit">add comment</button>
      <button type="button" class="upvote-btn">upvote</button>
    </div>
  </form>
{{/if}}
 

{{! scripts }}
{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
  <script src="/javascript/upvote.js"></script>
{{/if}}