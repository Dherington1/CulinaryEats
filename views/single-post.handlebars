



<div class="container is-mobile">

        <div class="col-lg-12">
            
            <div class="box has-background-grey-lighter">
               <article class="post">
                <div class="title">
                  <a href="/post/{{post.id}}">{{post.title}}</a>

                </div>
                <div class="meta">
                  {{post.description}}
                </div>
                <div class="meta">
                  {{post.ingredients}}
                </div>
                <div class="meta">
                  {{post.instructions}}
                </div>
                <div class="meta">
                  {{post.category}}
                </div>

              </article>
          </div>
      </div>
  <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</div>




{{! if logged in show this form to add a comment  }}
{{#if loggedIn}}
  <form align="center" class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit">add comment</button>
      <button type="button" class="upvote-btn">upvote</button>
    </div>
  </form>
{{/if}}

{{!  show the comments already made  }}
<div align="center" class="comments">
  {{#each post.comments}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on {{format_date created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>

{{! scripts }}
{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
  <script src="/javascript/upvote.js"></script>
{{/if}}