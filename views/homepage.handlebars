<ol class="post-list">
  {{#each posts as |post|}}
    <li>
      <article class="post">
        <div class="title">
          <a href="/post/{{id}}">{{post.title}}</a>
          
        <div class="meta">
          {{post.description}}
        </div>
        <div class="meta">
          {{post.ingredients}}
        </div>
        <div class="meta">
          {{post.instructions}}
        </div>
        <div class="meta">
          {{post.category}}
        </div>
        
      </article>
    </li>
  {{/each}}
</ol>

